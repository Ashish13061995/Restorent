<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.awesome.hp.restorent">

    <!-- if you want to load images from the internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/applogo1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.awesome.hp.restorent.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.awesome.hp.restorent.MainActivity" />
        <activity android:name="com.awesome.hp.restorent.User_Login" />
        <activity android:name="com.awesome.hp.restorent.SliderActivity" />
        <activity android:name="com.awesome.hp.restorent.SelectChoice" />
        <activity android:name="com.awesome.hp.restorent.UserRegistration" />
        <activity android:name="com.awesome.hp.restorent.Restaurant" />
        <activity
            android:name="com.awesome.hp.restorent.Home_page"
            android:label="@string/title_activity_home_page"></activity>
    </application>

</manifest>